package ClassPractice;

public class WhileLoopPractice {

	public static void main(String[] args) {
		
		String text = "radar";
		int i = 3;
	
		while (i >0){
			System.out.println("this is when "+i+text.charAt(i--));
		}
				
		String text1 = "testing";
		int i2 = text1.length() -1;
		while (i2 >=0){
			System.out.print(text.charAt(i2--));
		}
		
		
		

	}
}
