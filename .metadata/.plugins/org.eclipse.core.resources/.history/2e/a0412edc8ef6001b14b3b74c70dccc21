package ClassPractice;

public class PracticeAndClean {

	public static void main(String[] args) {

		for (int i = 1; i <= 7; i++) {
			for (int p = 1; p <= i; p++) {
				System.out.print("*");
			}

			System.out.println();

		}

		for (int p = 7; p >= 1; p--) {
			for (int k = 1; k <= 7; k--) {
				System.out.print("*");

			}
			System.out.println();
		}
	}
}
